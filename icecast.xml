<icecast>
<limits>
    <!-- Empêcher de lancer Icecast en tant que root -->
    <changeowner user="icecast" group="icecast"/>
    
    <!-- Port d'écoute de Icecast -->
    <listen-socket>
        <listen-address>0.0.0.0</listen-address>
        <listen-port>8000</listen-port>
    </listen-socket>

    <!-- Définir un emplacement et un contact administratif -->
    <location>Earth</location>
    <admin>icemaster@localhost</admin>

    <!-- Autres paramètres de configuration -->
    <max-listeners>100</max-listeners>
    <max-server-load>4.0</max-server-load>
    <max-slots>100</max-slots>
</limits>
</icecast>
